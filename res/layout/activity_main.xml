<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ToggleButton
        android:id="@+id/merlinButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/merlin"
        android:textOn="@string/merlin" />

    <ToggleButton
        android:id="@+id/percivalButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/percival"
        android:textOn="@string/percival" />

    <ToggleButton
        android:id="@+id/galahadButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/galahad"
        android:textOn="@string/galahad" />

    <ToggleButton
        android:id="@+id/gwenevereButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/gwenevere"
        android:textOn="@string/gwenevere" />

    <ToggleButton
        android:id="@+id/bevidereButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/bevidere"
        android:textOn="@string/bevidere" />

    <ToggleButton
        android:id="@+id/morgannaButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/morganna"
        android:textOn="@string/morganna" />

    <ToggleButton
        android:id="@+id/mordridButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/mordrid"
        android:textOn="@string/mordrid" />

    <ToggleButton
        android:id="@+id/oberonButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/oberon"
        android:textOn="@string/oberon" />

    <ToggleButton
        android:id="@+id/lancelotButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/lancelot"
        android:textOn="@string/lancelot" />

</LinearLayout>