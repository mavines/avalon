<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/merlinCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/merlin"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/percivalCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percival"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/galahadCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/galahad"
                android:textSize="@dimen/font_size" />

            <ImageButton
                android:id="@+id/galahadInfoButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:onClick="showGalahadRules"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_info_details" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/guinevereCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guinevere"
                android:textSize="@dimen/font_size" />

            <ImageButton
                android:id="@+id/guinevereInfoButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:onClick="showGuinevereRules"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_info_details" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/bedivereCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bedivere"
                android:textSize="@dimen/font_size" />

            <ImageButton
                android:id="@+id/bedivereInfoButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:onClick="showBedivereRules"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_info_details" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/loyalBlue"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/lancelotCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:text="@string/lancelot"
                android:textSize="@dimen/font_size" />

            <ImageButton
                android:id="@+id/lancelotInfoButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:onClick="showLancelotRules"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_info_details" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/minionRed"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/morgannaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morganna"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/minionRed"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/mordredCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mordred"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/minionRed"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/oberonCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oberon"
                android:textSize="@dimen/font_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="@string/start"
            android:textSize="@dimen/font_size" />

    </LinearLayout>

</ScrollView>